---
- name: Deploy CTFRiced Application on AWS
  hosts: ctfd_servers
  become: yes
  
  tasks:
    - name: Update apt cache
      apt:
        update_cache: yes
        cache_valid_time: 3600

    - name: Install required packages
      apt:
        name:
          - docker.io
          - docker-compose
          - git
          - python3-pip
        state: present

    - name: Add ubuntu user to docker group
      user:
        name: ubuntu
        groups: docker
        append: yes

    - name: Clone CTFRiced repository
      git:
        repo: 'https://github.com/MUHAMMED-SAHAL/CTFRiced'
        dest: /home/ubuntu/CTFRiced
        version: main
        force: yes
      become_user: ubuntu

    - name: Stop existing containers
      command: docker-compose down
      args:
        chdir: /home/ubuntu/CTFRiced
      ignore_errors: yes
      become_user: ubuntu

    - name: Start CTFd application
      command: docker-compose up -d --build
      args:
        chdir: /home/ubuntu/CTFRiced
      become_user: ubuntu

    - name: Wait for CTFd to be ready
      wait_for:
        port: 8000
        delay: 10
        timeout: 120

    - name: Verify CTFd is running
      uri:
        url: "http://localhost:8000"
        status_code: 200
      register: result
      until: result.status == 200
      retries: 5
      delay: 10